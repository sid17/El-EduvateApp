/***** Utils *****/
.clearfix {
    *zoom: 1;
}

.clearfix:before,
.clearfix:after {
    display: table;
    line-height: 0;
    content: "";
}

.clearfix:after {
    clear: both;
}

.visuallyhidden{
    border:0!important;
    clip:rect(0 0 0 0)!important;
    height:1px!important;
    margin:-1px!important;
    overflow:hidden!important;
    padding:0!important;
    position: absolute!important;
    width:1px!important;
}


/***** Layouts and grids *****/

/* layout inline-block align */
.layout-line-align {
    font-size: 0;
}
.layout-line-align > * {
    font-size: 16px;
    vertical-align: top;
    display: inline-block;
}
.layout-line-align > .fn-line-align {
    font-size: 0;
}

/* grids - custom not generic */
[class*="grid"]{
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

.grid-670{
    width: 670px;
}

.grid-240{
    width: 240px;
}

.grid-498{
    width: 498px;
}

.grid-402{
    width: 402px;
}

/* gutter */
.gutter-left-medium{
    border-left: 26px transparent solid;
}

.gutter-right-medium{
    border-right: 26px transparent solid;
}

.gutter-left-small{
    border-left: 10px transparent solid;
}

.gutter-right-small{
    border-right: 10px transparent solid;
}

.gutter-left-x-small{
    border-left: 7px transparent solid;
}

.gutter-right-x-small{
    border-right: 7px transparent solid;
}

.border-box{
    border: 5px #20b1df solid;
    border-radius: 21px;
}

/***** Modules *****/

/* module welcome message */
.mod-welcome-message{
    text-align: center;
    position: relative;
}

.mod-welcome-message .bg-welcome-message{
    background-position: 0 bottom;
}

.mod-welcome-message > div:first-child{
    /* because white circle - hack */
    position: absolute;
    top: 0;
    left: -20px;
    width: 305px;
}

.mod-welcome-message > div > div{
    /* because white circle - hack */
    margin: 92px 0 0 27px;
    width: 215px;
}

.mod-welcome-message .rtf-p{
    font-size: 22px;
    line-height: 26px;
}

.mod-welcome-message .mod-welcome-message__btn-order{
    /* because white circle - hack */
    position: relative;
}

.mod-welcome-message .mod-welcome-message__btn-order .mod-btn-link{
    /* because white circle - hack */
    position: absolute;
    top: 5px;
    left: 50px;
}


/* module main content */
.main-content{
    position: relative;
}

.main-content > div{
    /* Don t ask why */
    margin-left: 4px;
}

.main-content.ext-main-content__characterSw:before{
    z-index: 2;
    content: '';
    display: block;
    position: absolute;
    top: -8px;
    left: -60px;
    background: url('../images/classroom/ico-characterSw.png');
    width: 118px;
    height: 137px;
}

/* module slideshow*/
.mod-slideshow {
    position: relative;
    margin-bottom: 30px;
}

.mod-slideshow > div:first-child {
    padding: 0;
    position: relative;
    overflow: hidden;
    white-space: nowrap;
}

.mod-slideshow__btn-box{
    text-align: center;
    margin: 10px 0;
    height: 17px;
}

.mod-slideshow__btn-box .js-slide-btn{
    display: none;
}

.mod-slideshow__btn{
    box-shadow: 0px 4px 9px 0px rgba(0, 0, 0, 0.56);
    cursor: pointer;
    background-color: #fff;
    margin: 0 12px;
    display: inline-block;
    width: 15px;
    height: 15px;
    z-index: 2;
    border: 1px solid #4ec6e2;
    border-radius: 15px;
}

.mod-slideshow__btn.is-state-active{
    background-color: #dae52c;
}

/* module Key Benefits */
.mod-key-benefits .border-box {
    background-color: #fff;
    padding: 0 20px 20px;
}

.mod-key-benefits.bg-key-benefits{
    position: relative;
}

.mod-key-benefits.bg-key-benefits:after{
    content: '';
    display: block;
    position: absolute;
    top: -15px;
    left: 0;
    width: 481px;
    height: 32px;
    z-index: 2;
    background: url('../images/classroom/bg-keyBenefits.png');
    background: none\9;
}

.mod-key-benefits .rtf-p{
    width: 310px;
}

.mod-key-benefits .mod-key-benefits__item{
    padding: 10px 0;
    position: relative;
}

.mod-key-benefits .mod-key-benefits__item.bg-blue-circle{
    background-position: 100px 0;
}

.mod-key-benefits .mod-key-benefits__icon{
    text-align: center;
    width: 100px;
    margin-right: 20px;
    overflow: hidden;
}

/* module Testimonials*/
.mod-testimonials .border-box{
    background-color: #fff;
    padding: 0 20px 20px;
}

.mod-testimonials.bg-testimonials{
    position: relative;
}

.mod-testimonials.bg-testimonials:after{
    content: '';
    display: block;
    position: absolute;
    top: -26px;
    left: -1px;
    width: 393px;
    height: 43px;
    background: url('../images/classroom/bg-testimonials.png');
    background: none\9;
}

.mod-testimonials .mod-testimonials__cite{
    font-size: 14px;
    line-height: 18px;
    color: #8356a9;
    text-align: right;
    font-family: "segoeuib", Verdana, Geneva, sans-serif;
    margin-bottom: 50px;
}

.mod-testimonials .mod-testimonials__cite > div:first-child{
    font-size: 18px;
    line-height: 22px;
}

